                <div class="CSH_Elem1">--</div>
                <div class="CSH_Elem1">--</div>
                <div class="CSH_Elem1">--</div>
                <div class="CSH_Elem1">--</div>
                <div class="CSH_Elem1">--</div>
            </div>

            <%}%>


        </div>
        <p></p>
        <div class="Career_summary">
            <p><B>Bowling Career Summary</B></p>
            <div class="CS_Header">
                <div class="CSH_Elem"></div>
                <div class="CSH_Elem">M</div>
                <div class="CSH_Elem">Inn</div>
                <div class="CSH_Elem">B</div>
                <div class="CSH_Elem">Runs</div>
                <div class="CSH_Elem">Wkts</div>
                <div class="CSH_Elem">MDN</div>
                <div class="CSH_Elem">Econ</div>
                <div class="CSH_Elem">Avg</div>
                <div class="CSH_Elem">SR</div>
                <div class="CSH_Elem">5W</div>

            </div>
            <%if(BowlCS.rows.length){%>
            <div class="CS_Header">
                <div class="CSH_Elem1">ODI</div>
                <div class="CSH_Elem1"><%=CheckNULL(BowlCS.rows[0].M)%></div>
                <div class="CSH_Elem1"><%=CheckNULL(BowlCS.rows[0].INN)%></div>
                <div class="CSH_Elem1"><%=CheckNULL(BowlCS.rows[0].BALLS)%></div>
                <div class="CSH_Elem1"><%=CheckNULL(BowlCS.rows[0].RUNS)%></div>
                <div class="CSH_Elem1"><%=CheckNULL(BowlCS.rows[0].WICKETS)%></div>
                <div class="CSH_Elem1"><%=CheckNULL(BowlCS.rows[0].MAIDENS)%></div>
                <div class="CSH_Elem1"><%=CheckNULL(Math.round(BowlCS.rows[0].ECO*100)/100)%></div>
                <div class="CSH_Elem1"><%=CheckNULL(Math.round(BowlCS.rows[0].AVG*100)/100)%></div>
                <div class="CSH_Elem1"><%=CheckNULL(Math.round(BowlCS.rows[0].SR*100)/100)%></div>
                <div class="CSH_Elem1"><%=CheckNULL(BowlCS.rows[0].FIVE_WICKETS)%></div>

            </div>
            <%}else{%>
                <div class="CS_Header">
                    <div class="CSH_Elem1">ODI</div>
                    <div class="CSH_Elem1">--</div>
                    <div class="CSH_Elem1">--</div>
                    <div class="CSH_Elem1">--</div>
                    <div class="CSH_Elem1">--</div>
                    <div class="CSH_Elem1">--</div>
                    <div class="CSH_Elem1">--</div>
