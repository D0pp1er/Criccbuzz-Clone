                <div class="CSH_Elem">50</div>
                <div class="CSH_Elem">4s</div>
                <div class="CSH_Elem">6s</div>
            </div>
            <%if(BatCS.rows.length){%>
            <div class="CS_Header">
                <div class="CSH_Elem1">ODI</div>
                <div class="CSH_Elem1"><%=CheckNULL(BatCS.rows[0].MN)%></div>
                <div class="CSH_Elem1"><%=CheckNULL(BatCS.rows[0].INN)%></div>
                <div class="CSH_Elem1"><%=CheckNULL(BatCS.rows[0].NO)%></div>
                <div class="CSH_Elem1"><%=CheckNULL(BatCS.rows[0].RUN)%></div>
                <div class="CSH_Elem1"><%=CheckNULL(BatCS.rows[0].HS)%></div>
                <div class="CSH_Elem1"><%=CheckNULL(Math.round(BatCS.rows[0].AVG*100)/100)%></div>
                <div class="CSH_Elem1"><%=CheckNULL(BatCS.rows[0].BF)%></div>
                <div class="CSH_Elem1"><%=CheckNULL(Math.round(BatCS.rows[0].SR*100)/100)%></div>
                <div class="CSH_Elem1"><%=CheckNULL(BatCS.rows[0].HUNDREDS)%></div>
                <div class="CSH_Elem1"><%=CheckNULL(BatCS.rows[0].FIFTIES)%></div>
                <div class="CSH_Elem1"><%=CheckNULL(BatCS.rows[0].FOURS)%></div>
                <div class="CSH_Elem1"><%=CheckNULL(BatCS.rows[0].SIXES)%></div>
            </div>

        <%}else{%>
            <div class="CS_Header">
                <div class="CSH_Elem1">ODI</div>
                <div class="CSH_Elem1">--</div>
