<%
CheckNULL = function (x)
{
    // console.log('Hello ');
    if(x==null)return '--';
    else return x;
}
%>
<%var Pimg='pic.jpg'%>
<html>
<head>
    <%-include('../Partials/Homehead');%>
</head>
<body>
<header>
    <%-include('../Partials/header');%>
</header>
<div class="Wrapper">
<div class="Player_card">
    <div class="Player_Header">
    <img src="<%=dbplayerinfo.rows[0].IMG%>" class="img img-responsive">
        <div class="PHDetails">
            <H2><b><%=dbplayerinfo.rows[0].FN%></b></H2>
            <P><%=dbplayerinfo.rows[0].CN%></P>
        </div>
    </div>
    <div class="Total_info">
    <div class="Personal_info">
        <p><b>Personal Information</b></p>
        <div class="PI1">
            <div class="PIH"><b>Born</b></div>
            <div class="PII"><%=dbplayerinfo.rows[0].DOB%> (<%=dbplayerinfo.rows[0].AGE%> Years)</div>
        </div>
        <div class="PI1">
            <div class="PIH"><b>Height</b></div>
            <div class="PII"><%=Math.round(dbplayerinfo.rows[0].HEIGHT*100)/100%></div>
        </div>
        <div class="PI1">
            <div class="PIH"><b>Role</b></div>
            <div class="PII"><%=dbplayerinfo.rows[0].Role%></div>
        </div>
        <div class="PI1">
            <div class="PIH"><b>Batting Style</b></div>
            <div class="PII"><%=CheckNULL(dbplayerinfo.rows[0].BATH)%> Handed , <%=CheckNULL(dbplayerinfo.rows[0].BATS)%></div>
        </div>
        <div class="PI1">
            <div class="PIH"><b>Bowling Style</b></div>
            <div class="PII"><%=CheckNULL(dbplayerinfo.rows[0].BOWLH)%> Handed , <%=CheckNULL(dbplayerinfo.rows[0].BOWLS)%></div>
        </div>
        <P></P>
        <p><b>ICC ODI Rankings</b></p>
        <div class="PI1">
            <div class="PIH"><b>Batting</b></div>
            <div class="PII"><%=CheckNULL(dbplayerinfo.rows[0].BATR)%></div>
        </div>
        <div class="PI1">
            <div class="PIH"><b>Bowling</b></div>
            <div class="PII"><%=CheckNULL(dbplayerinfo.rows[0].BOWLR)%></div>
        </div>


    </div>
        <div class="Career_wrapper">
        <div class="Career_summary">
            <p><B>Batting Career Summary</B></p>
            <div class="CS_Header">
                <div class="CSH_Elem"></div>
                <div class="CSH_Elem">M</div>
                <div class="CSH_Elem">Inn</div>
                <div class="CSH_Elem">NO</div>
                <div class="CSH_Elem">Runs</div>
                <div class="CSH_Elem">HS</div>
                <div class="CSH_Elem">Avg</div>
                <div class="CSH_Elem">BF</div>
                <div class="CSH_Elem">SR</div>
