<!doctype html>
<style>

    .Wrapper{
        background-color: #e5e5e5;
    }
    
    .Player_card{
        margin-top: 0.3%;
        margin-right: 15%;
        margin-left: 15%;
        /*padding-top: 0.3%;*/
        /*padding-right: 15%;*/
        /*padding-left: 15%;*/


        
        background-color: white;
        /*width: 70%;*/
        /*alignment: center;*/
        border: 3px  solid #e5e5e5;

    }

    .Player_Header img{
        border-radius: 5%;
    }

    .Player_Header{
        display: flex;
        padding: 0.5%;
    }
    .PHDetails{
        padding-left: 2%;
        padding-top: 5%;
    }

    .Personal_info{
        padding: 0.5%;
        background-color: #efefed;
        max-width: 35%;
        min-width: 35%;
    }
    .PI1{
        display: flex;
    }
    .PIH{
        width: 40%;
    }

    .PII{
        width: 60%;
    }

    .Total_info{
        display: flex;
    }

    .Career_wrapper{
        padding: 1%;
        width: 70%;
        overflow: hidden;
    }
    .Career_summary{
        width: 100%;
    }
    .CS_Header{
        /*background-color: #dcdcdc;*/
        display: flex;

    }

    .CSH_Elem{
        min-width: 8%;
        padding: 1%;
        background-color: #dcdcdc;
        text-align: center;

    }

    .CSH_Elem1{
        min-width: 8%;
        padding: 1%;
        text-align: center;
    }

