<!doctype html>

<style>
.Shed{
    padding: 2px 15px ;
    display: flex;
    margin:0px 15%;    background-color: #d3faf1;


}
.SHinfo{
    padding: 1%;
    background-color: #2eb27f;
    border: 2px solid #676767;
    border-radius: 5px;
    margin: 1%;
    color: white;
}

.Series_card{
    padding: 2px 15px ;
    background-color: #d3faf1;
    /*margin:0px 250px;*/
    margin:0px 15%;
    height: 630px;
    display: none;

}
.vis3{
    display: block;
}
.Title2{
    display: flex;

    font-size: 21px;
}

.Header{
    display: flex;
    font-size: 20px;
    background-color: #3fd272;
    padding: 2px 10px;
    margin: 3px;

}
.Infos{
    display: flex;
    font-size: 17px;
    padding: 2px 10px;
    border: 2px solid #6dd75a;
    margin: 3px;
    color: #034c64;
    font-weight: bold;
    transition: 0.4s;
    border-radius: 5px;
}
.Infos:hover{
    /*border: 3px solid #8b9889;*/
    /*background-color: #f0fff0;*/
    background-color:#3fd272 ;
    /*color: #212c21;*/
    color: #ffffff;
    border-radius: 5px;
}
.date{
    width: 25%;
}
.Match_details{
    width: 55%;

}

.Match_Title{
    cursor: pointer;

}
.Match_Title a{
    text-decoration: none;
    transition: 0.1s;
    color: #474945;
}
.Match_Title a:hover{
    text-decoration: underline;
    /*color: #0fc99e;*/
    color: #164f6e;
}

.active3{
    background-color: #d7ffe2;
    color: black;

}
</style>

<html>
<head>
    <%-include('../Partials/Homehead');%>
</head>
<body>
<header>
    <%-include('../Partials/header');%>
</header>
<!--<h2><%=title%></h2>-->

<div class="Shed">
    <div class="SHinfo active3" id="s1">Schedule and Results</div>
    <div class="SHinfo" id="s2">Series Stat</div>
</div>
<div class="Series_card vis3" id="w1">
    <h2><b><%=temp%></b></h2>
    <div class="Title2"><div><%=SeriesCard.rows.length%> <%=SeriesCard.rows[0].MT%> &nbsp;|&nbsp;</div> <div> <%=SCH.rows[0].SD%> - <%=SCH.rows[0].ED%></div></div>
    <div class="Header">
        <div class="date">Date</div>
        <div class="Match_details">Match Details</div>
        <div class="Time">Time</div>
    </div>
    <%for(let i=0;i<SeriesCard.rows.length;i++){%>
    <div class="Infos">
        <div class="date"><%=SeriesCard.rows[i].MD%></div>
        <div class="Match_details">
            <div class="Match_Title"><a href="/ScoreCard/<%=temp%>/<%=SeriesCard.rows[i].MID%>"><%=SeriesCard.rows[i].MV%>, <%=SeriesCard.rows[i].MT%> <%=SeriesCard.rows[i].MID%></a></div>
            <div><%=SeriesCard.rows[i].VN%></div>
            <div><%=SeriesCard.rows[i].RES%></div>
        </div>
        <div class="Time"><%=SeriesCard.rows[i].TIME%></div>
    </div>
    <%}%>


</div>

<div class="Series_card" id="w2">

    <%-include('../Partials/Series_Stat');%>


</div>
<script>

    var btnx = document.getElementsByClassName("SHinfo");
    var infox=document.getElementsByClassName("Series_card");
    for (var i = 0; i < btnx.length; i++) {
        btnx[i].addEventListener("click", function() {
            var current = document.getElementsByClassName("active3");
            var c2=document.getElementsByClassName("vis3");
            current[0].className = current[0].className.replace(" active3", "");
            c2[0].className=c2[0].className.replace(" vis3", "");
            this.className += " active3";

            document.getElementById("w"+this.id.substring(1,2)).className += " vis3";
        });
    }
</script>

</body>
</html>